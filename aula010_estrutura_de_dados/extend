import os

os.system('cls')

lista_de_numeros = [100, 200]

entrada = input('Digite os números separados por espaço: ')

numeros = entrada.split() 

pares = []

for numero in numeros:
    numero_aux = int(numero)

    if numero_aux %2 == 0:
        pares.append(numero_aux)    

print('-'*70)
print(f'a lista gerada foi {pares}')
print('-'*70)

lista_de_numeros.append(pares)

print(f'Números pares adicionados na lista foram {pares}')