import os 

os.system('cls')


lista_numeros = []

for i in range(3):
    numero = int(input('Entre com o número: '))


    lista_numeros.append(numero)

print(f'a lista gerada foi: {lista_numeros}')


print('-'*70)
numero_verificar = int(input('Entre com o número desejado: '))
print('-'*70)

if numero_verificar in lista_numeros:
    print(f'o {numero_verificar} está presente na lista!')
else:
    print(f'o {numero_verificar} não está presente na lista!')


print()